# Here's how to generate the maps used in this project.
#
# When you're done, run `script/build-assets` and browse to
# http://localhost:3000/topojson/preview to see that all is well.

git clone https://github.com/mbostock/us-atlas
cd us-atlas
npm install
make make shp/us/states.shp shp/us/counties.shp

mkdir -p topo/elections-2016
node_modules/.bin/topojson \
    --out topo/elections-2016/states.json \
    --projection 'd3.geo.albersUsa()' \
    --width 960 \
    --height 500 \
    --post-quantization 1e5 \
    --simplify 0.1 \
    --id-property STATE_FIPS \
    -- shp/us/states.shp

for state_and_fips in AL:01 AK:02 AZ:04 AR:05 CA:06 CO:08 CT:09 DE:10 DC:11 FL:12 GA:13 HI:15 ID:16 IL:17 IN:18 IA:19 KS:20 KY:21 LA:22 ME:23 MD:24 MA:25 MI:26 MN:27 MS:28 MO:29 MT:30 NE:31 NV:32 NH:33 NJ:34 NM:35 NY:36 NC:37 ND:38 OH:39 OK:40 OR:41 PA:42 RI:44 SC:45 SD:46 TN:47 TX:48 UT:49 VT:50 VA:51 WA:53 WV:54 WI:55 WY:56; do
  state_abbr="${state_and_fips%%:*}"
  fips_code="${state_and_fips#*:}"

  echo "*** Generating topo/elections-2016/$state_abbr.json"

  mkdir -p shp/elections-2016/$state_abbr
  ogr2ogr -f 'ESRI Shapefile' -where "STATE_FIPS = '$fips_code'" shp/elections-2016/$state_abbr/counties.shp shp/us/counties.shp

  # We don't know off-hand the best projections for each state. The client
  # can calculaate them. (The files are quite small.)
  node_modules/.bin/topojson \
    --out topo/elections-2016/$state_abbr-ungrouped.json \
    --pre-quantization 1e6 \
    --post-quantization 1e4 \
    --simplify 7e-7 \
    --id-property FIPS \
    -- shp/elections-2016/$state_abbr/counties.shp

  node_modules/.bin/topojson-merge \
    --out topo/elections-2016/$state_abbr.json \
    --in-object=counties \
    --out-object=counties \
    -- topo/elections-2016/$state_abbr-ungrouped.json
done

cp topo/elections-2016/??.json topo/elections-2016/states.json $WHEREVER_MY_FILES_SHOULD_GO
