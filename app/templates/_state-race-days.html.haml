.state-race-days
  %table
    %thead
      %tr
        %th.date Date
        %th.state State
        %th.party Party
        %th.n-delegates Delegates at stake
    %tbody
      - for race in races
        %tr{'class': race.disabled? ? 'disabled' : '', 'data-race-day': race.race_day_id, 'data-party-name': race.party_name, 'data-state-name': race.state_name}
          %td.date
            - if race.enabled?
              %a{href: "/2016/primaries/#{race.race_day_id}"}
                %time{datetime: race.race_day_id}= race.date.strftime('%B %-d')
            - else
              %span
                %time{datetime: race.race_day_id}= race.date.strftime('%B %-d')
          %td.state= race.state_name
          %td.party= race.party_name
          %td.n-delegates
            %span.integer
              = race.n_delegates
            %span{'class': "dots dots-#{race.party_id.downcase}"}
              = 'â€¢' * race.n_delegates
