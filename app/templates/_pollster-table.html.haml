%div.tables
  %table.t-pollster.democratic
    %th
    %th
      candidate
    %th
      pollster
    - dem_candidates.each do |cd|
      %tr.dem-candidate
        %td.cd-img
          img
        %td.cd-name= cd.name
        %td.cd-avg-poll= cd.poll_percent
  %table.t-pollster.republican
    %th
    %th
      candidate
    %th
      pollster
    - gop_candidates.each do |cd|
      %tr.rep-candidate
        %td.cd-img
          img
        %td.cd-name= cd.name
        %td.cd-avg-poll= cd.poll_percent
